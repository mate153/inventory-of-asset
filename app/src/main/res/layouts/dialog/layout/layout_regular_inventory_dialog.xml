<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/inventory_dialog_attention"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/inventory_dialog_attention_desc"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <Button
            android:id="@+id/buttonContinueRegular"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/btn_resume_inventory"
            android:textSize="18sp"
            style="@style/PrimarySecondaryTextViewStyle"
            app:layout_constraintEnd_toEndOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/continueExportedText"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/inventory_dialog_resume_desc"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonContinueRegular"
            app:layout_constraintStart_toStartOf="@+id/buttonContinueRegular"
            app:layout_constraintTop_toBottomOf="@+id/buttonContinueRegular" />

        <Button
            android:id="@+id/buttonContinueBlind"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/btn_new_inventory"
            android:textSize="18sp"
            style="@style/PrimarySecondaryTextViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/continueExportedText" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/inventory_dialog_new_desc"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonContinueBlind"
            app:layout_constraintStart_toStartOf="@+id/buttonContinueBlind"
            app:layout_constraintTop_toBottomOf="@+id/buttonContinueBlind" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:background="@drawable/button_white_design"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/back_button"
            android:textSize="18sp"
            style="@style/TertiaryTextViewStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>